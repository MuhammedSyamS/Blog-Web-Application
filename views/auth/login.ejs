<%- include('../partials/header', { title: 'Log In' }) %>

<style>
  /* ðŸŒ„ Background overlay matching your mountain-reading image */
  body {
    background: linear-gradient(rgba(20, 20, 20, 0.65), rgba(20, 20, 20, 0.75)),
                url("/img/StockCake-Mountain_reading_escape_1762572141.jpg") center/cover no-repeat fixed;
    font-family: 'Poppins', sans-serif;
    color: #fff;
    min-height: 100vh;
    margin: 0;
    display: flex;
    flex-direction: column;
  }

  /* âœ… Container wrapper for spacing below navbar */
  .login-page {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 60px 15px; /* Adds breathing room below navbar */
  }

  .login-container {
    background: rgba(255, 255, 255, 0.15); /* Glass blur effect */
    backdrop-filter: blur(10px);
    border-radius: 15px;
    padding: 2.5rem;
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.4);
    width: 100%;
    max-width: 420px;
  }

  .login-container h2 {
    text-align: center;
    color: #fff;
    font-weight: 600;
    margin-bottom: 0.5rem;
  }

  .login-container hr {
    border-color: rgba(255, 255, 255, 0.3);
    margin-bottom: 1.5rem;
  }

  .form-label {
    color: #eaeaea;
    font-weight: 500;
  }

  .form-control {
    background-color: rgba(255, 255, 255, 0.15);
    border: 1px solid rgba(255, 255, 255, 0.3);
    color: #fff;
  }

  .form-control::placeholder {
    color: #ddd;
  }

  .form-control:focus {
    background-color: rgba(255, 255, 255, 0.2);
    border-color: #ffc107;
    box-shadow: 0 0 10px rgba(255, 193, 7, 0.4);
  }

  .btn-primary {
    background-color: #ffc107;
    border: none;
    color: #222;
    font-weight: 600;
    transition: 0.3s;
  }

  .btn-primary:hover {
    background-color: #ffca2c;
    transform: translateY(-2px);
  }

  .alert {
    border-radius: 10px;
  }

  a {
    color: #ffd966;
    text-decoration: none;
    font-weight: 500;
  }

  a:hover {
    color: #fff3b0;
  }
</style>

<!-- âœ… Keeps navbar separate and login perfectly centered -->
<div class="login-page">
  <div class="login-container">
    <h2>Welcome Back </h2>
    <p class="text-center mb-3" style="color: #ddd;">Log in to continue your journey</p>
    <hr>

    <!-- âœ… Flash Messages -->
    <% if (success_msg && success_msg.length > 0) { %>
      <div class="alert alert-success text-center"><%= success_msg[0] %></div>
    <% } %>

    <% if (error_msg && error_msg.length > 0) { %>
      <div class="alert alert-danger text-center"><%= error_msg[0] %></div>
    <% } %>

    <!-- âœ… Login Form -->
    <form action="/login" method="POST">
      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input 
          type="email"
          class="form-control"
          name="email"
          id="email"
          placeholder="Enter your email"
          required
        >
      </div>

      <div class="mb-4">
        <label for="password" class="form-label">Password</label>
        <input 
          type="password"
          class="form-control"
          name="password"
          id="password"
          placeholder="Enter your password"
          required
        >
      </div>

      <button type="submit" class="btn btn-primary w-100 py-2">Login</button>
    </form>

    <p class="mt-3 text-center" style="color: #ccc;">
      Donâ€™t have an account? <a href="/signup">Sign Up</a>
    </p>
  </div>
</div>

<%- include('../partials/footer') %>

<!-- âœ… Auto-hide flash messages -->
<script>
  setTimeout(() => {
    document.querySelectorAll('.alert').forEach(el => {
      el.style.transition = 'opacity 0.6s ease';
      el.style.opacity = '0';
      setTimeout(() => el.remove(), 600);
    });
  }, 4000);
</script>
