<%- include('../partials/header', { title: 'Sign Up' }) %>

<style>
  /* ðŸŒ„ Background same as login */
  body {
    background: linear-gradient(rgba(20, 20, 20, 0.65), rgba(20, 20, 20, 0.75)),
                url("/img/StockCake-Mountain_reading_escape_1762572141.jpg") center/cover no-repeat fixed;
    font-family: 'Poppins', sans-serif;
    color: #fff;
    min-height: 100vh;
    margin: 0;
    display: flex;
    flex-direction: column;
  }

  .signup-page {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 60px 15px;
  }

  .signup-container {
    background: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(10px);
    border-radius: 15px;
    padding: 2.5rem;
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.4);
    width: 100%;
    max-width: 420px;
  }

  .signup-container h2 {
    text-align: center;
    color: #fff;
    font-weight: 600;
    margin-bottom: 0.5rem;
  }

  .signup-container hr {
    border-color: rgba(255, 255, 255, 0.3);
    margin-bottom: 1.5rem;
  }

  .form-label {
    color: #eaeaea;
    font-weight: 500;
  }

  .form-control {
    background-color: rgba(255, 255, 255, 0.15);
    border: 1px solid rgba(255, 255, 255, 0.3);
    color: #fff;
  }

  .form-control::placeholder {
    color: #ddd;
  }

  .form-control:focus {
    background-color: rgba(255, 255, 255, 0.2);
    border-color: #ffc107;
    box-shadow: 0 0 10px rgba(255, 193, 7, 0.4);
  }

  .btn-primary {
    background-color: #ffc107;
    border: none;
    color: #222;
    font-weight: 600;
    transition: 0.3s;
  }

  .btn-primary:hover {
    background-color: #ffca2c;
    transform: translateY(-2px);
  }

  .alert {
    border-radius: 10px;
  }

  a {
    color: #ffd966;
    text-decoration: none;
    font-weight: 500;
  }

  a:hover {
    color: #fff3b0;
  }
</style>

<!-- âœ… Signup Section -->
<div class="signup-page">
  <div class="signup-container">
    <h2>Create Account </h2>
    <p class="text-center mb-3" style="color: #ddd;">Join Blogverse and start sharing your stories</p>
    <hr>

    <!-- Flash Messages -->
    <% if (success_msg && success_msg.length > 0) { %>
      <div class="alert alert-success text-center"><%= success_msg[0] %></div>
    <% } %>

    <% if (error_msg && error_msg.length > 0) { %>
      <div class="alert alert-danger text-center"><%= error_msg[0] %></div>
    <% } %>

    <!-- âœ… Signup Form -->
    <form action="/signup" method="POST">
      <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <input type="text" class="form-control" name="name" placeholder="Enter your name" required>
      </div>

      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" class="form-control" name="email" placeholder="Enter your email" required>
      </div>

      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input type="password" class="form-control" name="password" placeholder="Enter your password" required>
      </div>

      <div class="mb-4">
        <label for="confirmPassword" class="form-label">Confirm Password</label>
        <input type="password" class="form-control" name="confirmPassword" placeholder="Re-enter your password" required>
      </div>

      <button type="submit" class="btn btn-primary w-100 py-2">Sign Up</button>
    </form>

    <p class="mt-3 text-center" style="color: #ccc;">
      Already have an account? <a href="/login">Login</a>
    </p>
  </div>
</div>

<%- include('../partials/footer') %>

<!-- âœ… Auto-hide flash messages -->
<script>
  setTimeout(() => {
    document.querySelectorAll('.alert').forEach(el => {
      el.style.transition = 'opacity 0.6s ease';
      el.style.opacity = '0';
      setTimeout(() => el.remove(), 600);
    });
  }, 4000);
</script>
