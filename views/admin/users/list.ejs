<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= title || 'Manage Users' %></title>

  <!-- âœ… Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

  <!-- âœ… Bootstrap Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet" />

  <!-- âœ… Custom Admin CSS -->
  <link rel="stylesheet" href="/css/admin.css" />
</head>
<body>
  <!-- âœ… Admin Navbar -->
  <%- include('../../partials/admin_nav') %>

  <!-- âœ… Main Content -->
  <main class="container py-5">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
      <div>
        <h2 class="fw-bold mb-1">
          <i class="bi bi-people-fill text-primary"></i> Manage Users
        </h2>
        <p class="text-muted mb-0">View and manage all registered users.</p>
      </div>
      <a href="/admin/dashboard" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left-circle me-1"></i> Back to Dashboard
      </a>
    </div>

    <!-- Search Bar -->
    <div class="input-group mb-4 shadow-sm">
      <span class="input-group-text bg-primary text-white border-0">
        <i class="bi bi-search"></i>
      </span>
      <input
        type="text"
        id="userSearch"
        class="form-control border-0"
        placeholder="Search by name or email..."
      />
    </div>

    <!-- Users Table -->
    <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
      <div class="card-body p-0">
        <div class="table-responsive">
          <table class="table table-hover align-middle mb-0">
            <thead class="table-light text-center">
              <tr>
                <th>#</th>
                <th>Name</th>
                <th>Email</th>
                <th>Role</th>
                <th>Status</th>
                <th>Registered On</th>
                <th>Actions</th>
              </tr>
            </thead>

            <tbody id="userTableBody">
              <% if (!users || users.length === 0) { %>
                <tr>
                  <td colspan="7" class="text-center py-4 text-muted">
                    <i class="bi bi-exclamation-circle me-2"></i> No users found.
                  </td>
                </tr>
              <% } else { %>
                <% users.forEach(function(u, index) { %>
                  <tr>
                    <td class="text-center text-muted"><%= index + 1 %></td>
                    <td><strong><%= u.name %></strong></td>
                    <td><%= u.email %></td>
                    <td>
                      <span class="badge <%= u.role === 'admin' ? 'bg-danger' : 'bg-primary' %>">
                        <%= u.role.charAt(0).toUpperCase() + u.role.slice(1) %>
                      </span>
                    </td>
                    <td class="text-center">
                      <span class="badge rounded-pill px-3 py-2 <%= u.isActive ? 'bg-success' : 'bg-secondary' %>">
                        <i class="bi <%= u.isActive ? 'bi-check-circle-fill' : 'bi-x-circle-fill' %> me-1"></i>
                        <%= u.isActive ? 'Active' : 'Deactivated' %>
                      </span>
                    </td>
                    <td><%= new Date(u.createdAt).toLocaleDateString() %></td>
                    <td class="text-center">
                      <a href="/admin/users/<%= u._id %>" class="btn btn-sm btn-outline-info me-1" title="View">
                        <i class="bi bi-eye"></i>
                      </a>
                      <a href="/admin/users/<%= u._id %>/edit" class="btn btn-sm btn-outline-warning me-1" title="Edit">
                        <i class="bi bi-pencil"></i>
                      </a>

                      <% if (u.isActive) { %>
                        <form
                          action="/admin/users/<%= u._id %>/deactivate?_method=PUT"
                          method="POST"
                          class="d-inline"
                          onsubmit="return confirm('Deactivate this user?');"
                        >
                          <button type="submit" class="btn btn-sm btn-outline-danger" title="Deactivate">
                            <i class="bi bi-person-x"></i>
                          </button>
                        </form>
                      <% } else { %>
                        <form
                          action="/admin/users/<%= u._id %>/reactivate?_method=PUT"
                          method="POST"
                          class="d-inline"
                          onsubmit="return confirm('Reactivate this user?');"
                        >
                          <button type="submit" class="btn btn-sm btn-outline-success" title="Reactivate">
                            <i class="bi bi-person-check"></i>
                          </button>
                        </form>
                      <% } %>
                     <!-- ðŸ—‘ï¸ Delete -->
  <form
    action="/admin/users/<%= u._id %>?_method=DELETE"
    method="POST"
    class="d-inline"
    onsubmit="return confirm('Are you sure you want to permanently delete this user?');"
  >
    <button type="submit" class="btn btn-sm btn-outline-dark" title="Delete">
      <i class="bi bi-trash"></i>
    </button>
  </form>
</td>

                    </td>
                  </tr>
                <% }) %>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </main>

  <!-- âœ… Footer -->
  <%- include('../../partials/footer') %>

  <!-- âœ… Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  <!-- âœ… Search Filter Script -->
  <script>
    document.getElementById('userSearch').addEventListener('keyup', function () {
      const filter = this.value.toLowerCase();
      const rows = document.querySelectorAll('#userTableBody tr');
      rows.forEach(row => {
        const name = row.cells[1]?.innerText.toLowerCase();
        const email = row.cells[2]?.innerText.toLowerCase();
        row.style.display =
          name.includes(filter) || email.includes(filter) ? '' : 'none';
      });
    });
  </script>

  <!-- âœ… Inline Styles -->
  <style>
    body {
      background-color: #f8f9fa;
    }
    .table-hover tbody tr:hover {
      background-color: #f1f5ff;
    }
    .btn-outline-info:hover {
      background-color: #0dcaf0;
      color: #fff;
    }
    .btn-outline-warning:hover {
      background-color: #ffc107;
      color: #fff;
    }
  </style>
</body>
</html>
