<% title = 'Admin Dashboard' %>

  <link href="/css/admindashboard.css" rel="stylesheet">


<div class="container mt-5 mb-5">
  <div class="dashboard-header">
    <h2><i class="bi bi-speedometer2"></i> Admin Dashboard</h2>
    <p class="text-muted">Quick insights and control panel</p>
  </div>

  <!-- Statistics Cards -->
  <div class="dashboard-cards">
    <div class="card-dashboard bg-users text-center">
      <div class="icon-wrapper"><i class="bi bi-people-fill"></i></div>
      <div class="card-title">Total Users</div>
      <div class="card-value"><%= stats.totalUsers %></div>
    </div>

    <div class="card-dashboard bg-posts text-center">
      <div class="icon-wrapper"><i class="bi bi-journal-text"></i></div>
      <div class="card-title">Total Posts</div>
      <div class="card-value"><%= stats.totalPosts %></div>
    </div>

    <div class="card-dashboard bg-pending text-center">
      <div class="icon-wrapper"><i class="bi bi-hourglass-split"></i></div>
      <div class="card-title">Pending Posts</div>
      <div class="card-value"><%= stats.pendingPosts %></div>
    </div>
  </div>

  <!-- Quick Navigation Links -->
  <div class="quick-links mt-4">
    <a href="/admin/posts" class="quick-link-card">
      <div class="quick-link-icon"><i class="bi bi-card-list"></i></div>
      <div class="quick-link-title">Manage Posts</div>
      <p class="text-muted mb-0">View, edit, and delete posts</p>
    </a>

    <a href="/admin/users" class="quick-link-card">
      <div class="quick-link-icon"><i class="bi bi-person-gear"></i></div>
      <div class="quick-link-title">Manage Users</div>
      <p class="text-muted mb-0">Edit profiles or deactivate users</p>
    </a>

    <a href="/admin/settings" class="quick-link-card">
      <div class="quick-link-icon"><i class="bi bi-gear-fill"></i></div>
      <div class="quick-link-title">Settings</div>
      <p class="text-muted mb-0">Update site configuration</p>
    </a>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
