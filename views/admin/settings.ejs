<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= title || 'Admin Settings' %></title>

  <!-- ✅ Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

  <!-- ✅ Bootstrap Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet" />

  <!-- ✅ Custom Admin CSS -->
  <link rel="stylesheet" href="/css/admin.css" />
</head>
<body>
  <!-- ✅ Navbar -->
  <%- include('../partials/admin_nav') %>

  <!-- ✅ Main Content -->
  <main class="container py-5">
    <div class="text-center mb-5">
      <h2 class="fw-bold mb-2">
        <i class="bi bi-gear-wide-connected text-primary me-2"></i> Admin Settings
      </h2>
      <p class="text-muted">Manage site configuration, registration policies, and other preferences.</p>
    </div>

    <!-- ✅ Flash Messages -->
    <% if (success_msg && success_msg.length > 0) { %>
      <div class="alert alert-success alert-dismissible fade show mx-auto" role="alert" style="max-width: 600px;">
        <i class="bi bi-check-circle me-2"></i> <%= success_msg[0] %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>

    <% if (error_msg && error_msg.length > 0) { %>
      <div class="alert alert-danger alert-dismissible fade show mx-auto" role="alert" style="max-width: 600px;">
        <i class="bi bi-exclamation-triangle me-2"></i> <%= error_msg[0] %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>

    <!-- ✅ Settings Card -->
    <div class="card shadow-lg border-0 rounded-4 mx-auto settings-card">
      <div class="card-body p-5">
        <form action="/admin/settings" method="POST">
          <!-- Site Title -->
          <div class="mb-4">
            <label for="siteTitle" class="form-label fw-semibold text-secondary">
              <i class="bi bi-fonts me-2 text-primary"></i> Site Title
            </label>
            <input
              type="text"
              id="siteTitle"
              name="siteTitle"
              class="form-control form-control-lg shadow-sm"
              value="<%= settings.siteTitle || '' %>"
              placeholder="Enter your site title"
              required
            />
          </div>

          <!-- Allow Registrations -->
          <div class="form-check form-switch mb-4 ps-2">
            <input
              class="form-check-input"
              type="checkbox"
              id="allowRegistrations"
              name="allowRegistrations"
              <%= settings.allowRegistrations ? 'checked' : '' %>
            />
            <label class="form-check-label fw-semibold text-secondary" for="allowRegistrations">
              <i class="bi bi-person-plus me-2 text-success"></i>
              Allow New User Registrations
            </label>
          </div>

          <!-- Save Button -->
          <div class="d-grid mt-4">
            <button type="submit" class="btn btn-primary btn-lg fw-semibold shadow-sm">
              <i class="bi bi-save2 me-2"></i> Save Settings
            </button>
          </div>
        </form>
      </div>
    </div>

    <!-- ✅ Back to Dashboard -->
    <div class="text-center mt-4">
      <a href="/admin/dashboard" class="btn btn-outline-secondary px-4">
        <i class="bi bi-arrow-left-circle me-2"></i> Back to Dashboard
      </a>
    </div>
  </main>

  <!-- ✅ Footer -->
  <%- include('../partials/footer') %>

  <!-- ✅ Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  <!-- ✅ Inline Styles -->
  <style>
    body {
      background-color: #f8f9fb;
    }

    .settings-card {
      max-width: 600px;
      background-color: #ffffff;
      transition: all 0.3s ease;
    }

    .settings-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 1.2rem 2rem rgba(0, 0, 0, 0.1);
    }

    .btn-primary {
      background: linear-gradient(135deg, #007bff, #0056b3);
      border: none;
      transition: all 0.3s ease;
    }

    .btn-primary:hover {
      background: linear-gradient(135deg, #0056b3, #004494);
      transform: translateY(-2px);
    }

    .form-control:focus {
      border-color: #007bff;
      box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.2);
    }

    .text-muted {
      font-size: 0.95rem;
    }

    label.form-label i {
      font-size: 1.1rem;
    }
  </style>
</body>
</html>
