<%- include('../partials/header', { title: 'My Profile', user }) %>

<main class="container py-5" style="max-width: 1000px;">
  <!-- Profile Header -->
  <div class="text-center mb-5">
    <h2 class="fw-bold mb-2">üë§ My Profile</h2>
    <p class="text-muted">Welcome back, <strong><%= user.name %></strong>!</p>
    <hr class="w-25 mx-auto">
  </div>

  <!-- Account Information -->
  <div class="card shadow-sm border-0 mb-5 rounded-4">
    <div class="card-header bg-primary text-white fw-semibold rounded-top-4">
      Account Information
    </div>
    <div class="card-body">
      <div class="row g-3">
        <div class="col-md-6">
          <p><strong>Name:</strong> <%= user.name %></p>
        </div>
        <div class="col-md-6">
          <p><strong>Email:</strong> <%= user.email %></p>
        </div>
        <div class="col-md-6">
          <p><strong>Registered On:</strong> <%= new Date(user.createdAt).toLocaleDateString() %></p>
        </div>
        <div class="col-md-6">
          <p><strong>Role:</strong> <%= user.role ? user.role.charAt(0).toUpperCase() + user.role.slice(1) : 'User' %></p>
        </div>
      </div>
    </div>
  </div>

  <!-- User Activity Summary -->
  <div class="row g-4 mb-5">
    <div class="col-md-4">
      <div class="card border-0 shadow-sm rounded-4 text-center p-3">
        <i class="bi bi-pencil-square display-5 text-primary"></i>
        <h4 class="fw-bold mt-3 mb-1"><%= myPosts ? myPosts.length : 0 %></h4>
        <p class="text-muted small mb-0">Total Posts</p>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card border-0 shadow-sm rounded-4 text-center p-3">
        <i class="bi bi-heart-fill display-5 text-danger"></i>
        <h4 class="fw-bold mt-3 mb-1"><%= user.likedPosts ? user.likedPosts.length : 0 %></h4>
        <p class="text-muted small mb-0">Liked Posts</p>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card border-0 shadow-sm rounded-4 text-center p-3">
        <i class="bi bi-calendar-check display-5 text-success"></i>
        <h4 class="fw-bold mt-3 mb-1"><%= new Date().toLocaleDateString() %></h4>
        <p class="text-muted small mb-0">Today</p>
      </div>
    </div>
  </div>

  <!-- My Posts Section -->
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h3 class="fw-semibold mb-0">üìù My Posts</h3>
    <a href="/posts/new" class="btn btn-success btn-sm">
      <i class="bi bi-plus-circle me-1"></i> Create New Post
    </a>
  </div>

  <% if (myPosts && myPosts.length > 0) { %>
    <div class="row g-4">
      <% myPosts.forEach(function(post) { %>
        <div class="col-md-6 col-lg-4">
          <div class="card border-0 shadow-sm h-100 rounded-4">
            <div class="card-body d-flex flex-column">
              <h5 class="fw-bold text-dark mb-2"><%= post.title %></h5>
              <p class="text-muted small flex-grow-1">
                <%= post.content.substring(0, 120) %>...
              </p>
              <div class="d-flex justify-content-between align-items-center mt-3">
                <a href="/posts/<%= post._id %>" class="btn btn-sm btn-outline-primary">
                  <i class="bi bi-eye"></i> View
                </a>
                <div class="btn-group">
                  <a href="/posts/edit/<%= post._id %>" class="btn btn-sm btn-outline-warning">
                    <i class="bi bi-pencil"></i>
                  </a>
                  <form action="/posts/delete/<%= post._id %>?_method=DELETE" method="POST" class="d-inline">
                    <button class="btn btn-sm btn-outline-danger" type="submit" onclick="return confirm('Are you sure you want to delete this post?')">
                      <i class="bi bi-trash"></i>
                    </button>
                  </form>
                </div>
              </div>
            </div>
            <div class="card-footer bg-light text-muted small">
              Created on <%= new Date(post.createdAt).toLocaleDateString() %>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } else { %>
    <div class="alert alert-info text-center py-4 rounded-4 shadow-sm">
      <i class="bi bi-info-circle me-2"></i> You haven‚Äôt created any posts yet. Start writing your first one!
    </div>
  <% } %>
</main>

<%- include('../partials/footer') %>
